<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    
    <TextView
        android:id="@+id/tv_trailer_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent=".45"
        app:layout_constraintLeft_toRightOf="@+id/iv_trailer_thumbnail"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="8dp"
        android:theme="@style/Text"/>

    <ImageView
        android:id="@+id/iv_trailer_thumbnail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_trailer_title"
        app:layout_constraintWidth_percent=".55"
        android:adjustViewBounds="true"/>

    <ImageView
        android:background="@drawable/ic_play_arrow_white_90dp"
        app:layout_constraintTop_toBottomOf="@id/iv_trailer_thumbnail"
        app:layout_constraintBottom_toTopOf="@id/iv_trailer_thumbnail"
        app:layout_constraintLeft_toRightOf="@id/iv_trailer_thumbnail"
        app:layout_constraintRight_toLeftOf="@id/iv_trailer_thumbnail"
        android:layout_width="90dp"
        android:layout_height="90dp" />
</android.support.constraint.ConstraintLayout>

